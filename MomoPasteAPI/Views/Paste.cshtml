@{
	MomoPasteAPI.Models.Paste paste = ViewData["paste"] as MomoPasteAPI.Models.Paste;
	Layout = "_Base.cshtml";
}

<meta property="og:title" content="üçë Momo Paste: @paste.Title" />
<meta name="theme-color" content="#f98b88">


<p style="padding: 15px;"></p>
<center><h1 class="display-2"><a href="/" class="headerText">Momo üçë</a></h1></center>

<h1 class="display-5">@paste.Title</h1>

@if (paste.InvalidateAfterViewing && paste.Previewed && !paste.Viewed)
{
	<div class="alert alert-info" role="alert">
		This is a preview, after sharing this paste can only be viewed once. (NOTE THAT EMBEDS ARE NOT SUPPORTED AND WILL INVALIDATE THE PASTE UPON LOADING)
	</div>
}
@if (paste.InvalidateAfterViewing && paste.Viewed)
{
	<div class="alert alert-danger" role="alert">
		This paste will be invalidated after reloading/refreshing the page.
	</div>
}

<p class="lead">Created on: @paste.Created.Day/@paste.Created.Month/@paste.Created.Year</p>
<hr class="my-4">
<div style="background-color: #333; width: 100%; padding: 25px;overflow: scroll;overflow-wrap: normal;color: PeachPuff;">
	@paste.GetContent()
</div>

<br />

<center><code id="postUrl" style="padding: 15px;">`http://momo.myuuiii.moe/p/@paste.Id`</code></center>
